# Atrivio Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# Supabase
# =============================================================================
# Run `supabase status -o env` to get these values from your local instance
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-from-supabase-status
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-from-supabase-status

# =============================================================================
# API
# =============================================================================
PORT=3001
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000

# API URL for frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# =============================================================================
# Redis (BullMQ)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Stripe
# =============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Platform fee percentage (e.g., 3.0 for 3%)
PLATFORM_FEE_PERCENT=3.0

# =============================================================================
# Email (optional, for notifications)
# =============================================================================
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=

# =============================================================================
# Storage (Supabase Storage is default)
# =============================================================================
# STORAGE_BUCKET=atrivio-assets
