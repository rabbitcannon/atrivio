# Atrivio Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# Supabase
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# API
# =============================================================================
PORT=3001
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000

# API URL for frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# =============================================================================
# Redis (BullMQ)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Stripe
# =============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Subscription price IDs (create these in Stripe Dashboard > Products)
# Pro plan: $149/month recurring subscription
STRIPE_PRO_PRICE_ID=price_...
# Enterprise plan: $499/month recurring subscription
STRIPE_ENTERPRISE_PRICE_ID=price_...

# Platform fee percentage (e.g., 3.0 for 3%)
PLATFORM_FEE_PERCENT=3.0

# =============================================================================
# Email (optional, for notifications)
# =============================================================================
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=

# =============================================================================
# Storage (Cloudflare R2)
# =============================================================================
# R2 provides S3-compatible storage with $0 egress fees
# Get credentials from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=atrivio-media
# Optional: Custom domain for public URLs (otherwise uses r2.dev subdomain)
# R2_PUBLIC_URL=https://media.yourdomain.com
