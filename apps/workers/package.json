{
  "name": "@haunt/workers",
  "version": "0.0.1",
  "private": true,
  "description": "Haunt Platform Workers - BullMQ Background Jobs",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/main.ts",
    "start": "node dist/main.js",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@haunt/shared": "workspace:*",
    "@supabase/supabase-js": "^2.47.10",
    "bullmq": "^5.31.0",
    "ioredis": "^5.4.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
