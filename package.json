{
  "name": "atrivio",
  "version": "0.0.1",
  "private": true,
  "description": "Atrivio - Multi-tenant attractions industry management system",
  "author": "Atrivio Team",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "clean": "turbo clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @atrivio/database migrate",
    "db:seed": "pnpm --filter @atrivio/database seed",
    "db:types": "pnpm --filter @atrivio/database generate-types"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "next": "^16.0.0",
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "sonner": "^2.0.7",
      "dompurify@<3.2.4": ">=3.2.4",
      "mermaid@>=10.9.0-rc.1 <10.9.4": ">=10.9.4",
      "nanoid@<3.3.8": ">=3.3.8",
      "nanoid@>=4.0.0 <5.0.9": ">=5.0.9",
      "diff@<8.0.3": ">=8.0.3",
      "tar@<=7.5.2": ">=7.5.3"
    },
    "ignoredBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf",
      "@swc/core",
      "esbuild",
      "msgpackr-extract",
      "sharp",
      "supabase"
    ]
  }
}
