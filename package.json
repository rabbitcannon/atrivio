{
  "name": "atrivio",
  "version": "0.0.1",
  "private": true,
  "description": "Atrivio - Multi-tenant attractions industry management system",
  "author": "Atrivio Team",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "clean": "turbo clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @atrivio/database migrate",
    "db:seed": "pnpm --filter @atrivio/database seed",
    "db:types": "pnpm --filter @atrivio/database generate-types"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "next": "^15.5.9",
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "sonner": "^2.0.7"
    }
  }
}
